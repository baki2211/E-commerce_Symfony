<div class="container text-center mt-3">
    <div class="row justify-content-center row-cols-4 gap-3 row-gap-3">
        {% for category in categories %}
            <div class="col card" style="width: 18rem;">
                <div class="card-title"><h3>{{ category.name }}</h3></div>
                <div class="row d-flex row-cols-2">
                    {% for product in category.products %}
                        <div class="col"> 
                            <img src="{{ asset('img/prod.png') }}" class="card-img-top" alt="{{ product.name }}">
                            <p ><small class="text-body-secondary"> 
                            <a class="nav-link" style="color: black;" href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.name }}</a>
                            </small></p>
                        </div>
                    {% endfor %}
                </div>
                <a href="{{ path('app_prod_filtered', {'id': category.id}) }}">Shop Now</a>
            </div>
        {% endfor %}
    </div>
</div>
