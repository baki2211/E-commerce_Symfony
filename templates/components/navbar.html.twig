<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-Qm6P7uaTav+IQmRbQfPC0F/C9wEkY39hrc5pcJX8wnNi1vSAew76z7cwnAslIY7S" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navstyle" style="background-color:rgb(19,25,33);">
        <div class="container row-cols-3">
            <div class="d-flex col">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <img src="{{ asset('img/famatonW.png') }}" alt="famaton logo">
                </a>
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                
                <a class="align-content-center p-3 link-opacity-25-hover link-offset-2 link-underline link-underline-opacity-0" role="button" id="popover-address-loggedin" data-bs-toggle="popover" data-bs-trigger="hover focus"  tabindex="0">
                    <i class="fa-solid fa-map-location"></i>  User Address
                </a>
                {% else %}
                    <a class="align-content-center p-3 link-opacity-25-hover link-offset-2 link-underline link-underline-opacity-0" role="button" id="popover-address" data-bs-toggle="popover" data-bs-trigger="hover focus"  tabindex="0">
                    <i class="fa-solid fa-map-location"></i>  Update address
                </a>
                {% endif %}
            </div>

            <form class="d-flex col-6" style="margin-right: 40px;" role="search">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        All
                    </button>
                    <ul class="dropdown-menu">
                        {% for category in categories %}
                            <li><button style="color:black;" class="dropdown-item nav-link" type="button" href="{{ path('app_prod_filtered', {'id': category.id}) }}">{{category.name}}</button></li>
                        {% endfor %}
                        
                    </ul>
                </div>
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-warning" type="submit">Search</button>
            </form>

            <div class="collapse navbar-collapse col" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                        <li class="nav-item p-2">
                            <a class="align-content-center link-underline link-underline-opacity-0" href="#"><i class="fa-solid fa-basket-shopping"></i> Basket</a>
                        </li>
                    {% else %}
                        <li class="nav-item p-2">
                            <a tabindex="0" class="align-content-center link-underline link-underline-opacity-0 dropdown-toggle" role="button" id="popover-account-list" data-bs-toggle="popover" data-bs-trigger="hover focus" >
                                Account & Lists
                            </a>
                        </li>
                        <li class="nav-item p-2">
                            <a class="align-content-center link-underline link-underline-opacity-0" href="#"><i class="fa-solid fa-basket-shopping"></i> Basket</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hidden div to hold popover content for address -->
    <div id="popover-address-content" class="d-none">
        <div class="popover-body text-center">
          <div>
            <a class="btn btn-warning p-2 mb-2" href="{{ path('app_login') }}">Sign In</a>
            <p>New Customer? Start <a href="{{ path('app_register') }}">Here</a></p>
          </div>
        </div>
    </div>

    <!-- Hidden div to hold popover content for user accoutn -->
    <div id="popover-content" class="d-none">
        <div class="popover-body text-center">
          <div>
            <a class="btn btn-warning p-2 mb-2" href="{{ path('app_login') }}">Sign In</a>
            <p>New Customer? Start <a href="{{ path('app_register') }}">Here</a></p>
          </div>
          <div class="container text-center">
            <div class="row justify-content-start">
              <div class="col">
                <h6><b>Your Lists</b></h6>
                <ul>
                  <li><a href="">Find a Gift  </a></li>
                  <li><a href="">Create a List</a></li>
                  <li><a href="">Wedding List </a></li>
                  <li><a href="">Baby Wishlist</a></li>  
                </ul>
              </div>
              <div class="col">
                <h6><b>Your Account</b></h6>
                <ul>
                  <li><a href="">Your Orders</a></li>
                  <li><a href="">Your Lists </a></li>
                  <li><a href="">Memberships</a></li>
                </ul>
              </div>
            </div>
            </div>
            
        </div>
    </div>


    <script src="{{ asset('js/navbar.js') }}"></script>
</body>
</html>
